generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  password String
  role     String
}

enum playerState {
  NOTLISTED
  LISTED
  SOLD
}

model Player {
  id        String      @id @unique
  name      String
  basePrice Int
  state     playerState @default(NOTLISTED)
}
